{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleDetection": "force",
    "allowJs": true,

    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
